                    <fileHandlers>
                        <fileHandler name="fastcgi" extension=".php">
                            <params>
                                <param name="host" type="string">127.0.0.1</param>
                                <param name="port" type="integer">9010</param>
                            </params>
                        </fileHandler>
                        <fileHandler name="fastcgi" extension=".phtml">
                            <params>
                                <param name="host" type="string">127.0.0.1</param>
                                <param name="port" type="integer">9010</param>
                            </params>
                        </fileHandler>
                        <fileHandler name="servlet" extension=".do" />
                    </fileHandlers>

                </server>

